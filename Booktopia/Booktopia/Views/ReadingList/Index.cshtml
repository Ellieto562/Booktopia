@using Booktopia.Models.Entities
<!-- Reading List View -->
@model IEnumerable<Booktopia.Models.Entities.ReadingList>

<h2>My Reading Lists</h2>

<!-- Create a New Reading List -->
<form method="post" asp-controller="ReadingList" asp-action="Create" class="mb-3">
    <input type="text" name="name" placeholder="Enter list name" required class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Create New List</button>
</form>

@if (Model.Any())
{
    @foreach (var list in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h4>@list.Name</h4>

                <!-- Rename Form -->
                <form method="post" asp-controller="ReadingList" asp-action="Rename" class="d-inline">
                    <input type="hidden" name="listId" value="@list.Id" />
                    <input type="text" name="newName" placeholder="Rename list" required class="form-control d-inline w-auto" />
                    <button type="submit" class="btn btn-secondary">Rename</button>
                </form>

                <!-- Delete Button -->
                <form method="post" asp-controller="ReadingList" asp-action="Delete" class="d-inline">
                    <input type="hidden" name="listId" value="@list.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

                <hr />

                <!-- Books in this Reading List -->
                @if (list.BookReadingLists.Any())
                {
                    <h5>Books:</h5>
                    <ul>
                        @foreach (var book in list.BookReadingLists.Select(brl => brl.Book))
                        {
                            <li>
                                @book.Title by @book.Author
                                <form method="post" asp-controller="ReadingList" asp-action="RemoveBook" class="d-inline">
                                    <input type="hidden" name="listId" value="@list.Id" />
                                    <input type="hidden" name="bookId" value="@book.Id" />
                                    <button type="submit" class="btn btn-sm btn-warning">Remove</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No books in this list.</p>
                }
            </div>
        </div>
    }
}
else
{
    <p>You have no reading lists. Create one above!</p>
}
